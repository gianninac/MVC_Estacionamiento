@model IEnumerable<MVCEstacionamiento.Models.Vehiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro de Vehículos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Propietario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Patente)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Propietario.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Patente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Patente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Patente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
